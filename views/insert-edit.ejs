<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }
        .form-container {
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 40px auto;
        }
        .form-label {
            font-weight: 600;
            color: #495057;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .formgroup img {
            width: 120px;
            height: auto;
            margin: 5px;
            border-radius: 8px;
        }
        .btn1 {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="form-container">
        <h2 class="text-center mb-4">Edit Product</h2>

        <form action="/admin/editproduct/<%= editp.id %>" method="POST">
            <!-- Product Name -->
            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <input type="text" name="product" class="form-control" value="<%=editp.product %>">
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label class="form-label">Category</label>
                <input type="text" name="category" class="form-control" value="<%=editp.category %>">
            </div>

            <!-- Sub-Category -->
            <div class="mb-3">
                <label class="form-label">Sub-Category</label>
                <input type="text" name="subcategory" class="form-control" value="<%=editp.subcategory %>">
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" rows="3"><%=editp.description %></textarea>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label class="form-label">Price (₹)</label>
                <input type="number" name="price" class="form-control" value="<%=editp.price %>">
            </div>

            <!-- Discount Price -->
            <div class="mb-3">
                <label class="form-label">Discount Price (₹)</label>
                <input type="text" name="discountPrice" class="form-control" value="<%=editp.discountPrice%>">
            </div>

            <!-- Product Images -->
            <div class="formgroup mb-3">
                <% if (editp.image1 && editp.image1.length > 0) { %>
                    <% editp.image1.forEach((img1,index) => { %>
                        <img src="<%= img1 %>" class="img-fluid" alt="Product Image">
                        <a href="/admin/editinsertimg/<%= editp._id %>/<%= index %>">Edit Image</a>

                    <% }) %>
                <% } else { %>
                    <p>No images available</p>
                <% } %>
               
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Edit Product</button>

        </form>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
